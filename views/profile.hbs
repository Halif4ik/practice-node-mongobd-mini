<h1>Profile</h1>
<div class="row">
    <div class="col s6">
        {{#if customer.img}}
            <img class="avatar" src="{{customer.img}}" alt="temp image">
        {{else}}
            <p>Avatar absent</p>
        {{/if}}

    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Your E-mail: <strong>{{customer.email}}</strong></p>
            <div class="input-field">
                <input name="name" id="name" type="text" class="validate" required value="{{customer.firstName}}">
                <label for="name">First Name</label>
                <span class="helper-text" data-error="Enter name"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatarka</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{tokenSentToFront}}">
            <button type="submit" class="btn">Apply</button>
        </form>
    </div>
</div>