<h2>Cart</h2>
<div class="card-container">
    {{#if users.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Number of months</th>
                <th>Price per months</th>
                <th>Action</th>
            </tr>
            </thead>

            <tbody>
            {{#each users}}
                <tr>
                    <td>{{firstName}} {{lastName}}</td>
                    <td>{{count}}</td>
                    <td>{{price}}</td>
                    <td>
                        <button class="btn btm-small js-remove" data-id="{{developerId}}" data-csrf="{{@root.tokenSentToFront}}">Decrease</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
       <p>  <strong>Total price:</strong> <span class="price-total">{{price}}</span></p>
        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{@root.tokenSentToFront}}">
            <button class="btn btm-small js-remove blue" type="submit" data-id="{{users}}">Make purchase</button>
        </form>
    {{else}}<p>Temporary empty card</p>
    {{/if}}
</div>