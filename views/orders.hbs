<H1>My orders </H1>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Purchase id: <small>{{_id}}</small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{customer.firstName}}</em> {{customerOld.customerId.email}}</p>
                        <ol>
                            {{#each developers}}
                                <li>{{developer.firstName}} x({{count}})</li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price: <span class="price-total">{{totalSum}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}<p>Temporary empty list</p>
{{/if}}